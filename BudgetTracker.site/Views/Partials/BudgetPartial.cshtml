@using BudgetTracker.web.Dtos
@model List<BudgetDto>

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Total Income</th>
                <th>Total Expenses</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var budget in Model)
            {
                <tr>
                    <td>@budget.Name</td>
                    <td>@budget.TotalIncome.ToString("C")</td>
                    <td>@budget.TotalExpenses.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No budgets available.</p>
}
